@page
@model RegisterModel


@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<div class="container">
    <div style="width:75%; margin:auto">

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input style="width:50% " asp-for="Input.Email" class="form-control" required/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input style="width:50% " asp-for="Input.Password" class="form-control" required/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input style="width:50% " asp-for="Input.ConfirmPassword" class="form-control" required />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Description"></label>
                <textarea style="width:50%" asp-for="Input.Description" rows="15" cols="200" class="form-control"></textarea >
                <span asp-validation-for="Input" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input style="width:50% " asp-for="Input.FirstName" class="form-control" required/>
                <span asp-validation-for="Input" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input style="width:50% " asp-for="Input.LastName" class="form-control" required />
                <span asp-validation-for="Input" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ImageFile" class="control-label"></label>
                <div class="col-md-5">
                    <input type="file" asp-for="Input.ImageFile" accept="image/*" />
                </div>
                <span asp-validation-for="Input.ImageFile" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
        </div>
    </div>

        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
